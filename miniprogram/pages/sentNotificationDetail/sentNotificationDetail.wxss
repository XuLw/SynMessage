/* pages/notificationDetail/notificationDetail.wxss */

page {
  height: 100%;
  width: 100%;
  /* font-size: 0.8em; */
  background-color: #f5f5f5;
}

.base-container {
  width: 100%;
  height: 100%;
  /* padding-top: 10rpx; */
}

.detail-container {
  height: 91%;
  width: 100%;
}

.title-container {
  font-size: 1.5em;
  text-align: center;
  height: 200rpx;
  display: flex;
  margin: 0 10rpx;
  flex-direction: column;
  box-shadow: 0 20rpx 20rpx -10rpx #aaa;
  justify-content: center;
  border-radius: 8rpx;
  background-color: #F0F8FF;
  /* background-color: #fbe8d4; */
}

.content-container {
  padding: 50rpx;
  font-size: 1.1em;
  /* box-shadow: 0 20rpx 20rpx -10rpx #aaa; */
  background-color:#F0F8FF;
  margin: 10rpx 10rpx 0 10rpx;
  border-radius: 10rpx 10rpx 0 0;
  /* outline: 1px solid red; */
}

.name-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 0.9em;
  /* box-shadow: 0 20rpx 20rpx -10rpx #aaa; */
  background-color: #F0F8FF;
  margin: 0 10rpx 0 10rpx;
  /* border-radius: 8rpx; *//* outline: 1px solid red; */
}

.date-container {
  padding: 20rpx;
  font-size: 0.9em;
  text-align: right;
  border-radius: 0 0 10rpx 10rpx;
  margin: 0 10rpx 40rpx 10rpx;
  box-shadow: 0 20rpx 20rpx -10rpx #aaa;
  background-color: #b6d7a8;
}

.read-container {
  height: 80rpx;
  padding-left: 1em;
  display: flex;
  background: linear-gradient(to right, #e0e0e0, #f5f5f5);
  align-items: center;
}

.foot-container {
  width: 100%;
  position: fixed;
  height: 9%;
  display: flex;
  flex-direction: row;
  bottom: 0;
  font-size: 1.2em;
}

.foot-left {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
  color: #666;
  background-color: white;
}

.foot-left-down {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
  color: #666;
  background-color: #d4eac9;
}

.foot-middle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 100%;
  color: #666;
  background-color: white;
}

.foot-middle-down {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 100%;
  color: #666;
  background-color: #bddfae;
}

.foot-right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  color: white;
  background-color: #8eca74;
}

.share-button {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #5cce2b;
}

.share-button-down {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #8eca74;
}

.share-button::after {
  border: none;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: flex;
}
