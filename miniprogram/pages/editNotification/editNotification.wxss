
page {
  height: 100%;
  width: 100%;
  /* font-size: 0.8em; */
}

.base-container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

/*系统通知  */

.system-notification {
  height: 8%;
  width: 100%;
  background-color: #d9d2e9;
  margin-bottom: 20rpx;
  display: flex;
  padding-left: 5rpx;
  flex-direction: row;
  align-items: center;
}

.noti-image {
  height: 70rpx;
  width: 70rpx;
}

.form-container {
  height: 90%;
  width: 100%;
}

.section {
  margin: 10rpx;
  padding: 20rpx;
  background-color: white;
  /* outline: 1px solid red; */
}

.section-deadline {
  margin: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
}

.deadline {
  width: 46%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.section-name {
  margin: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
}

.submit-button {
  margin-top: 20rpx;
  width: 90%;
}

/*全局  */

.block-line {
  height: 1rpx;
  width: 100%;
}
