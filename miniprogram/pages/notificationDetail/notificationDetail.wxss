/* pages/notificationDetail/notificationDetail.wxss */

page {
  height: 100%;
  width: 100%;
  /* font-size: 0.8em; */
  background-color: #f5f5f5;
}

.base-container {
  width: 100%;
  height: 100%;
  /* padding-top: 10rpx; */
}

.detail-container {
  height: 89%;
  width: 100%;
}

.title-container {
  font-size: 1.5em;
  text-align: center;
  height: 200rpx;
  display: flex;
  margin: 0 10rpx;
  flex-direction: column;
  box-shadow: 0 20rpx 20rpx -10rpx #aaa;
  justify-content: center;
  border-radius: 8rpx;
  background-color: #F0F8FF;
}

.content-container {
  padding: 50rpx;
  font-size: 1.1em;
  /* box-shadow: 0 20rpx 20rpx -10rpx #aaa; */
  background-color: #F0F8FF;
  margin: 10rpx 10rpx 0 10rpx;
  border-radius: 10rpx 10rpx 0 0;
  /* outline: 1px solid red; */
}

.name-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 0.9em;
  /* box-shadow: 0 20rpx 20rpx -10rpx #aaa; */
  background-color: #F0F8FF;
  margin: 0 10rpx 0 10rpx;
  /* border-radius: 8rpx; *//* outline: 1px solid red; */
}

.date-container {
  padding: 20rpx;
  font-size: 0.9em;
  text-align: right;
  border-radius: 0 0 10rpx 10rpx;
  margin: 0 10rpx 20rpx 10rpx;
  box-shadow: 0 20rpx 20rpx -10rpx #aaa;
  background-color: #b6d7a8;
}

.button-cancel {
  width: 90%;
  background-color: red;
  position: fixed;
  bottom: 20rpx;
  right: -50rpx;
  left: -50rpx;
  color: white;
}

.button-cancel-down {
  width: 90%;
  background-color: #c00;
  position: fixed;
  bottom: 20rpx;
  right: -50rpx;
  left: -50rpx;
  color: white;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: flex;
}
